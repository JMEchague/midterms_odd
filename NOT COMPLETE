#include <iostream>
#include <string>
using namespace std;

int main() {
    int age;
    string fitnessGoal;
    string dietaryRestriction;
    int availableTime;
    string healthCondition;
    float weight, height, bmi;
    string locationPreference;
    string workoutIntensity;
    float dailyCalories = 2000;
    float waterIntake = 1.5;
    string dietRecommendation;
    //inputs
    cout << "Enter your age: ";
    cin >> age;

    cout << "What is your fitness goal? (build muscle / lose weight / maintain): ";
    cin.ignore();
    getline(cin, fitnessGoal);

    cout << "Do you have any dietary restrictions? (vegetarian / pescatarian / gluten-free / keto / none): ";
    getline(cin, dietaryRestriction);

    cout << "How many hours do you have available weekly for exercises? ";
    cin >> availableTime;

    cout << "Do you have any existing health conditions? (if none, type 'none'): ";
    cin.ignore();
    getline(cin, healthCondition);

    if (healthCondition != "none") {
        cout << "Please consult a professional for medical advice." << endl;
    }

    cout << "Enter your weight (in kg): ";
    cin >> weight;

    cout << "Enter your height (in meters): ";
    cin >> height;

    cout << "What is your preferred workout intensity? (low / medium / high): ";
    cin.ignore();
    getline(cin, workoutIntensity);

    cout << "Where do you prefer to work out? (gym / outdoor / home): ";
    getline(cin, locationPreference);

    bmi = weight / (height * height);
    //calories
    if (age < 25) {
        dailyCalories += 300;
    }
    else if (age > 50) {
        dailyCalories -= 300;
    }
    //intensity
    if (workoutIntensity == "low") {
        waterIntake += 0.5;
        if (fitnessGoal == "build muscle") {
            dailyCalories -= 100;
        }
    }
    else if (workoutIntensity == "medium") {
        waterIntake += 1.0;
        if (fitnessGoal == "build muscle") {
            dailyCalories += 100;
        }
    }
    else if (workoutIntensity == "high") {
        waterIntake += 1.5;
        if (fitnessGoal == "build muscle") {
            dailyCalories += 200;
        }
    }
    //BMI = calories

    string exerciseSuggestion;
    string routine;
    string foods;
    if (fitnessGoal == "lose weight") {
        if (bmi >= 25) {
            exerciseSuggestion = "Intense cardio and strength training are suggested.";
            routine = "\"We want to Suggest a Full week work out plan you can follow\"";
            routine += "\n Monday : Cardio";
            routine += "\n  Warm-up : 5-10 minutes of brisk walking or light jogging";
            routine += "\n  High-Intensity Interval Training ( HIIT )";
            routine += "\n   30 seconds of sprinting";
            routine += "\n   1-minute walking";
            routine += "\n   and Repeat for 20 minutes";
            routine += "\n   Cool dowm : 5-10 minutes of stretching\n";
            routine += "\n Tuesday : Stregnth Training";
            routine += "\n  Warm-up : 5-10 minutes of brisk walking or light jogging";
            routine += "\n  Circuit ( 3 Sets of 10-12 reps each )";
            routine += "\n   Squats";
            routine += "\n   Push-ups (Modified if needed)";
            routine += "\n   Bent-over rows with dumbbells";
            routine += "\n   Plank ( Hold for 30 seconds )";
            routine += "\n   Cool down : 5-10 minutes of stretching\n";
            routine += "\n Wednesday : Rest or Light Activity \n";
            routine += "\n Thursday : Cardio";
            routine += "\n  Warm-up : 5-10 minutes of brisk walking or light jogging";
            routine += "\n  Steady-state Cardio";
            routine += "\n   30 minutes of cycling, swimming, or fast walking";
            routine += "\n   Cool down : 5-10 minutes of stretching\n";
            routine += "\n Friday : Strength Training";
            routine += "\n  Warm-up : 5-10 minutes of brisk walking or light jogging";
            routine += "\n  Circuit ( 3 Sets of 10-12 reps each )";
            routine += "\n   Lunges";
            routine += "\n   Dumbbell Shoulder press";
            routine += "\n   Deadlifts";
            routine += "\n   Russian Twist ( 10 - 12 reps each )";
            routine += "\n   Cool down : 5-10 minutes of stretching\n";
            routine += "\n Saturday : Cardio";
            routine += "\n  Warm-up : 5-10 minutes of brisk walking or light jogging";
            routine += "\n  High-Intensity Interval Training ( HIIT )";
            routine += "\n   30 seconds of jumping jacks";
            routine += "\n   1-minute walking";
            routine += "\n   and Repeat for 20 minutes";
            routine += "\n   Cool dowm : 5-10 minutes of stretching\n";
            routine += "\n Sunday : Rest or Light Activity";
            routine += "\n But always listen to your body to prevent injuries, A Proper diet, and Stay Hydrated!\n";
            dailyCalories -= 500;
        }
        else {
            exerciseSuggestion = "Moderate cardio and light weight training are suggested.";
            routine = "\"We want to Suggest a Full week work out plan you can follow\"";
            routine += "\n Monday : Cardio";
            routine += "\n  Warm-up : 5-10 minutes of brisk walking or light jogging";
            routine += "\n  Moderate Cardio : ";
            routine += "\n   20-30 minutes of cycling, brisk walking, or swimming";
            routine += "\n   and Repeat for 20 minutes";
            routine += "\n   Cool dowm : 5-10 minutes of stretching\n";
            routine += "\n Tuesday : Stregnth Training";
            routine += "\n  Warm-up : 5-10 minutes of brisk walking or light jogging";
            routine += "\n  Circuit ( 2 Sets of 10-12 reps each )";
            routine += "\n   Bodyweight squat";
            routine += "\n   Dumbbell chest press (Light weights)";
            routine += "\n   Seated Rows with resistant band";
            routine += "\n   Standing Calf raises";
            routine += "\n   Cool down : 5-10 minutes of stretching\n";
            routine += "\n Wednesday : Rest or Light Activity \n";
            routine += "\n Thursday : Cardio";
            routine += "\n  Warm-up : 5-10 minutes of brisk walking or light jogging";
            routine += "\n  Moderate Cardio : ";
            routine += "\n   20 - 30 minutes of elliptical training or rowing";
            routine += "\n   Cool down : 5-10 minutes of stretching\n";
            routine += "\n Friday : Strength Training";
            routine += "\n  Warm-up : 5-10 minutes of brisk walking or light jogging";
            routine += "\n  Circuit ( 2 Sets of 10-12 reps each )";
            routine += "\n   Lunges";
            routine += "\n   Dumbbell Shoulder press ( Light Weight )";
            routine += "\n   Resistance Band bicep curls";
            routine += "\n   Plank ( Hold for 20 - 30 seconds )";
            routine += "\n   Cool down : 5-10 minutes of stretching\n";
            routine += "\n Saturday : Cardio";
            routine += "\n  Warm-up : 5-10 minutes of brisk walking or light jogging";
            routine += "\n  Moderate Cardio : ";
            routine += "\n   20 - 30 minutes of Dancing, Hiking, or light jogging";
            routine += "\n   and Repeat for 20 minutes";
            routine += "\n   Cool dowm : 5-10 minutes of stretching\n";
            routine += "\n Sunday : Rest or Light Activity";
            routine += "\n But always listen to your body to prevent injuries, A Proper diet, and Stay Hydrated!\n";
            dailyCalories -= 250;
        }
    }
    else if (fitnessGoal == "build muscle") {
        if (availableTime > 7) {
            exerciseSuggestion = "Heavy weight training with minimal cardio is advised.";
            dailyCalories += 500;
        }
        else {
            exerciseSuggestion = "Moderate weight training with some cardio is recommended.";
            dailyCalories -= 250;
        }
    }
    else if (fitnessGoal == "maintain") {
        exerciseSuggestion = "A balanced mix of cardio and weight training is recommended.";
    }

    if (locationPreference == "gym") {
        exerciseSuggestion += " In the gym, focus on cardio machines and free weights.";
    }
    else if (locationPreference == "home") {
        exerciseSuggestion += " At home, try bodyweight exercises, yoga, and resistance bands.";
    }
    else if (locationPreference == "outdoor") {
        exerciseSuggestion += " Outdoors, focus on running, cycling, or hiking.";
    }

    if (dietaryRestriction == "vegetarian") {
        dietRecommendation = "Focus on plant-based proteins like beans, tofu, whole grains, vegetables, and include B12 and Omega-3 sources like flaxseeds.";
    }
    else if (dietaryRestriction == "pescatarian") {
        dietRecommendation = "Base your diet on fish for protein, especially fatty fish like salmon, and include whole grains and vegetables.";
    }
    else if (dietaryRestriction == "gluten-free") {
        dietRecommendation = "Opt for naturally gluten-free foods like rice, quinoa, and vegetables. Be cautious about cross-contamination.";
    }
    else if (dietaryRestriction == "keto") {
        dietRecommendation = "Focus on high fats and low carbs. Include fatty fish, meats, eggs, cheese, nuts, and low-carb vegetables like leafy greens.";
    }
    else {
        dietRecommendation = "Maintain a balanced diet with lean meats, fish, whole grains, and vegetables, limiting processed foods.";
    }

    cout << "\n--- Your Fitness Profile ---" << endl;
    cout << "Age: " << age << " years" << endl;
    cout << "Fitness Goal: " << fitnessGoal << endl;
    cout << "Dietary Restriction: " << dietaryRestriction << endl;
    cout << "Available Time for Exercises: " << availableTime << " hours/week" << endl;
    cout << "Health Condition: " << healthCondition << endl;
    cout << "Weight: " << weight << " kg" << endl;
    cout << "Height: " << height << " meters" << endl;
    cout << "Workout Location Preference: " << locationPreference << endl;

    cout << "\n--- BMI Results ---" << endl;
    cout << "Your BMI is: " << bmi << endl;
    if (bmi < 18) {
        cout << "You are underweight." << endl;
    }
    else if (bmi >= 18 && bmi <= 25) {
        cout << "You have a normal weight." << endl;
    }
    else if (bmi > 25 && bmi <= 30) {
        cout << "You are overweight." << endl;
    }
    else {
        cout << "You are obese." << endl;
    }

    cout << "\nYour daily calories should be: " << dailyCalories << " kcal" << endl;
    cout << "Your recommended exercises are: " << exerciseSuggestion << endl;
    cout << routine << endl;
    cout << "Your recommended water intake is: " << waterIntake << " liters per day" << endl;

    cout << "\n--- Dietary Recommendation ---" << endl;
    cout << dietRecommendation << endl;

    return 0;
}
